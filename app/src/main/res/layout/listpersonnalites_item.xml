<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dip"
    android:background="@drawable/list_selector"
    >

    <ImageView
        android:id="@+id/listRow1"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_lens"
        android:tint="#F531CAA8"/>

    <TextView
        android:id="@+id/textViewPersonnalites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@+id/listRow1"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@+id/listRow1"
        android:text="@string/nom_personnage"
        android:fontFamily="@font/tienne"
        android:textColor="#000000"
        android:textSize="15dp"/>


</RelativeLayout>